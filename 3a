#include <iostream>
#include <cstdlib>
#include <fstream>
#include <string>
#include <cstring>

using namespace std;

int main(int argc, char* argv[]) {
    
   int count;    
  
   
if (argc > 1)
{
for(int count = 1;count < argc; count++)
if (strcmp(argv[1], "./program") == 0)
if (strcmp(argv[2], "--database") == 0)
if (strcmp(argv[3], "./database.txt") == 0)
cout<<'\0';
}
else
{
cout << "The command had no other arguments." << endl;
}

            
      std::string s(argv[4]);
      std::ifstream file( "database.txt" ) ;
      std::string search_str ;
    
      search_str =s.substr(0,3);
      std::string line ;
      int line_number = 0 ;
      
    while( std::getline( file, line ) )
    {
        ++line_number ;
        if( line.find(search_str) != std::string::npos )
            std::cout <<line  ;
            
    }

 return 0;

 }
